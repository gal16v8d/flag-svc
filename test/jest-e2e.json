{
  "rootDir": "../",
  "moduleNameMapper": {
    "^@app/(.*)$": "<rootDir>/src/$1"
  },
  "moduleFileExtensions": ["js", "json", "ts"],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "modulePathIgnorePatterns": ["<rootDir>/dist"]
}
